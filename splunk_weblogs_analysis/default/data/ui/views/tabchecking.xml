<form script="tabs.js" stylesheet="tabs.css">
  <label>WURFL WURFL Microservice For Splunk DashBoard</label>
  <fieldset autoRun="true">
    <input type="time" token="my_time_range" searchWhenChanged="true">
      <label>Time Range Select</label>
      <default>
        <earliest>0</earliest>
        <latest></latest>
      </default>
    </input>
    <input type="dropdown" token="ff_token" searchWhenChanged="true">
      <label>Form Factor</label>
      <choice value="Tablet">Tablet</choice>
      <choice value="Feature Phone">Feature Phone</choice>
      <choice value="Smartphone">Smartphone</choice>
	  <choice value="*">All</choice>
      <default>*</default>
    </input>
    <input type="dropdown" token="region_token" searchWhenChanged="true">
      <label>Select Regions</label>
      <choice value="Africa">Africa</choice>
      <choice value="Asia">Asia</choice>
      <choice value="Europe">Europe</choice>
      <choice value="South America">South America</choice>
      <choice value="North America">North America</choice>
      <choice value="Oceania">Oceania</choice>
      <choice value="*">All Regions</choice>
      <default>*</default>
    </input>
    <input type="text" token="base_search" searchWhenChanged="true">
      <label>Search String</label>
      <default>* | lookup wurfl_lookup user_agent</default>
    </input>
  </fieldset>
  <row id="tabs">
    <panel>
      <html>
	         <ul id="tabs" class="nav nav-tabs">
                    
                    <li class="active">
                        <a href="#" class="toggle-tab" data-toggle="tab" data-elements="getting_started">Getting Started</a>
                    </li>
                    <li>
                        <a href="#" class="toggle-tab" data-toggle="tab" data-elements="device_row" data-token="control_token_complete_device_name" >Device</a>
                    </li>
                    <li>
                    	<a href="#" class="toggle-tab" data-toggle="tab" data-elements="formfactor_row" data-token="control_token_form_factor">Form Factor</a>
                    </li>
               		 <li>
                    	<a href="#" class="toggle-tab" data-toggle="tab" data-elements="manufacturer_row" data-token="control_token_manufacturer">Manufacturer</a>
                    </li>
                  <li>
                  		<a href="#" class="toggle-tab" data-toggle="tab" data-elements="os_row" data-token="control_token_device_os">OS</a>
                  </li>
		 </ul>
	      </html>
    </panel>
  </row>
  <row id="getting_started">
    <panel>
      <html>
        <p align="justify" style="text-indent: 50px;">
           WURFL WURFL Microservice text here.
        </p>
        <p align="justify" style="text-indent: 50px;">
           More WURFL Microservice text here
        </p>
        <p>
          After installing the WURFL Microservice Splunk App, you can use our pre-built dashboard. Additionally, you can write custom lookup searches and pivots.  And if you need more information about the device, its capabilities, operating system, or the browser it is using, you can add more WURFL capabilities to suit your needs.
        </p>
      </html>
    </panel>
  </row>
  <row id="device_row">
    <panel>
      <map>
        <search>
          <query>$base_search$ $control_token_complete_device_name$ | iplocation ip_address allfields=true | search Continent="$region_token$" | search form_factor="Feature Phone" OR form_factor="Smartphone" OR form_factor="Tablet" | search form_factor = "$ff_token$" | geostats latfield=lat longfield=lon count by complete_device_name globallimit=0</query>
          <earliest>$my_time_range.earliest$</earliest>
          <latest>$my_time_range.latest$</latest>
        </search>
        <option name="mapping.data.maxClusters">100</option>
        <option name="mapping.map.center">(0,0)</option>
        <option name="mapping.map.zoom">2</option>
        <option name="mapping.markerLayer.markerMaxSize">50</option>
        <option name="mapping.markerLayer.markerMinSize">10</option>
        <option name="mapping.markerLayer.markerOpacity">0.8</option>
        <option name="mapping.tileLayer.maxZoom">9</option>
        <option name="mapping.tileLayer.minZoom">0</option>
        <option name="drilldown">all</option>
      </map>
    </panel>
  </row>
  <row id="formfactor_row">
    <panel>
      <map>
        <search>
          <query>$base_search$ $control_token_form_factor$ | iplocation ip_address allfields=true | search Continent="$region_token$" | search form_factor="Feature Phone" OR form_factor="Smartphone" OR form_factor="Tablet" | search form_factor = "$ff_token$"  | geostats latfield=lat longfield=lon count by form_factor globallimit=0</query>
          <earliest>$my_time_range.earliest$</earliest>
          <latest>$my_time_range.latest$</latest>
        </search>
        <option name="mapping.data.maxClusters">100</option>
        <option name="mapping.map.center">(0,0)</option>
        <option name="mapping.map.zoom">2</option>
        <option name="mapping.markerLayer.markerMaxSize">50</option>
        <option name="mapping.markerLayer.markerMinSize">10</option>
        <option name="mapping.markerLayer.markerOpacity">0.8</option>
        <option name="mapping.tileLayer.maxZoom">7</option>
        <option name="mapping.tileLayer.minZoom">0</option>
        <option name="drilldown">all</option>
      </map>
    </panel>
  </row>
  <row id="manufacturer_row">
    <panel>
      <map>
        <search>
          <query>$base_search$ $control_token_manufacturer$ |iplocation ip_address allfields=true | search Continent="$region_token$" | search form_factor="Feature Phone" OR form_factor="Smartphone" OR form_factor="Tablet" | search form_factor = "$ff_token$"  | geostats latfield=lat longfield=lon count by brand_name globallimit=0</query>
          <earliest>$my_time_range.earliest$</earliest>
          <latest>$my_time_range.latest$</latest>
        </search>
        <option name="mapping.data.maxClusters">100</option>
        <option name="mapping.map.center">(0,0)</option>
        <option name="mapping.map.zoom">2</option>
        <option name="mapping.markerLayer.markerMaxSize">50</option>
        <option name="mapping.markerLayer.markerMinSize">10</option>
        <option name="mapping.markerLayer.markerOpacity">0.8</option>
        <option name="mapping.tileLayer.maxZoom">7</option>
        <option name="mapping.tileLayer.minZoom">0</option>
        <option name="drilldown">all</option>
      </map>
    </panel>
  </row>
  <row id="os_row">
    <panel>
      <map>
        <search>
          <query>$base_search$ $control_token_device_os$ | iplocation ip_address allfields=true | search Continent="$region_token$" | search form_factor="Feature Phone" OR form_factor="Smartphone" OR form_factor="Tablet" | search form_factor = "$ff_token$"  | geostats latfield=lat longfield=lon count by device_os globallimit=0</query>
          <earliest>$my_time_range.earliest$</earliest>
          <latest>$my_time_range.latest$</latest>
        </search>
        <option name="mapping.data.maxClusters">100</option>
        <option name="mapping.map.center">(0,0)</option>
        <option name="mapping.map.zoom">2</option>
        <option name="mapping.markerLayer.markerMaxSize">50</option>
        <option name="mapping.markerLayer.markerMinSize">10</option>
        <option name="mapping.markerLayer.markerOpacity">1</option>
        <option name="mapping.tileLayer.maxZoom">7</option>
        <option name="mapping.tileLayer.minZoom">0</option>
        <option name="drilldown">all</option>
      </map>
    </panel>
  </row>
</form>
